
<div class="row">
    <div class="col-6">
        <h1>Users</h1>
    </div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/addemployee" type="button" class="btn btn-primary align-self-center">+ add user</a>
    </div>
</div>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Full Name</th>
            <th scope="col">Job Title</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Email</th>
            <th scope="col" class="text-end">Action</th>
        </tr>
    </thead>
    <tbody>

        {{#each rows}}
        <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.full_name}}</td>
            <td>{{this.job_title}}</td>
            <td>{{this.phone_number}}</td>
            <td>{{this.email}}</td>
            <td class="text-end">
                <a href="/viewemployee/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>
                    View</a>
                <a href="/editemployee/{{this.id}}" type="button" class="btn btn-light btn-small"><i
                        class="bi bi-pencil"></i>
                    Edit</a>
                <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>
                    Delete</a>
            </td>
        </tr>
        {{/each}}

    </tbody>
</table>